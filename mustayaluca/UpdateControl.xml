			<label>1/#UpdateControl.InstalledUpdateCount</label>
			<visible>!player.hasmedia+control.isvisible(50)+string.equals(#UpdateControl.InstalledUpdateCount,0)</visible>
		</control>
		
		<control>
			<description>group element</description>
			<type>group</type>
			<animation effect="slide" time="250" start="-300,0" reversible="false">visible</animation>
			<animation effect="slide" time="250" end="-300,0" reversible="false">hidden</animation>
			
			<control>
				<description>button group</description>
				<type>group</type>
				<posX>0</posX>
				<posY>230</posY>
				<layout>StackLayout(0, Vertical, true)</layout>

          <control>
            <description>Show Updates</description>
            <type>button</type>
            <id>2</id>
            <label>Show installed updates</label>
            <onright>50</onright>
            <onup>17</onup>
            <ondown>3</ondown>
          </control>
		  
          <control>
            <description>Search Update</description>
            <type>button</type>
            <id>3</id>
            <label>Search for updates</label>
            <onright>50</onright>
            <onup>2</onup>
            <ondown>4</ondown>
          </control>
		  
          <control>
            <description>Install Update</description>
            <type>button</type>
            <id>4</id>
            <label>Install update(s)</label>
            <onright>50</onright>
            <onup>3</onup>
            <ondown>5</ondown>
          </control>
		  
          <control>
            <description>Restore Points</description>
            <type>checkbutton</type>
            <id>5</id>
            <label>Restore Points</label>
            <onright>50</onright>
            <onup>4</onup>
            <ondown>6</ondown>							
          </control>
		  
          <control>
            <description>Reboot</description>
            <type>button</type>
            <id>6</id>
            <label>Reboot</label>
            <onright>50</onright>
            <onup>5</onup>
            <ondown>7</ondown>
          </control>
		  
          <control>
            <description>Clean</description>
            <type>button</type>
            <id>7</id>
            <label>Clean distribution folder</label>
            <onright>50</onright>
            <onup>6</onup>
            <ondown>2</ondown>
          </control>
			
			</control>
		</control>

	
    <!-- *** Progress *** -->

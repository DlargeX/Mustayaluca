<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
	<id>803</id>
	<defaultcontrol>50</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<define>#header.hover:hover_extensions.png</define>		
  <controls>
  
  <!--            :: BACKGROUND ::           	 -->
	
    <control>
      <description>Default Background</description>
      <type>image</type>
      <id>1</id>
      <texture>#header.hover</texture>
      <width>1920</width>
      <height>1080</height>
			<shouldCache>true</shouldCache>					
    </control>

		<control>
			<description>Backdrop Overlay</description>
			<type>image</type>
			<id>1</id>
			<posX>0</posX>
			<posY>0</posY>
			<width>1925</width>
			<height>1085</height>
			<texture>overlay_background.png</texture>
		</control>

		<control>
			<description>Backdrop Overlay - Wide List View</description>
			<type>image</type>
			<id>1</id>
			<posX>0</posX>
			<posY>0</posY>
			<width>1925</width>
			<height>1085</height>
			<texture>overlay_menu_widelist.png</texture>
		</control>

		<control>
			<description>Backdrop Overlay Bar</description>
			<type>image</type>
			<id>1</id>
			<posX>0</posX>
			<posY>998</posY>
			<width>1920</width>
			<height>82</height>
			<texture>overlay_bar_bottom.png</texture>
		</control>

		<control Style="BigTitle">
			<description>Page Title</description>
			<type>label</type>
			<id>1</id>
			<posX>70</posX>
			<posY>45</posY>
			<width>1220</width>
			<label>#(L(14001)) / #MPEI.Translation.Settings.Label</label>
			<visible>!player.hasmedia</visible>
		</control>

		<control Style="Time">
			<description>Date</description>
			<type>label</type>
			<id>1</id>
			<posX>70</posX>
			<posY>120</posY>
			<label>#date / #time</label>
		</control>

		<control Style="BigTitle">
			<description>Selected Index Label</description>
			<type>label</type>
			<id>1</id>
			<posX>1850</posX>
			<posY>45</posY>
			<width>1220</width>
			<align>right</align>
			<label>#selectedindex/#itemcount</label>
		</control>

		<control>
			<description>button group</description>
			<type>group</type>
			<posX>0</posX>
			<posY>230</posY>
			<layout>StackLayout</layout>		
		<control>
			<description>Sections</description>
			<type>button</type>
			<id>2</id>
			<label>#MPEI.Translation.Sections.Label</label>
			<onright>50</onright>
			<onup>17</onup>
		</control>					
		<control>
			<description>Restore Defaults</description>
			<type>button</type>
			<id>3</id>
			<label>#MPEI.Translation.RestoreDefaults.Label</label>
			<onright>50</onright>
			<onup>2</onup>
			<ondown>2</ondown>
		</control>	
	</control>		
	
		<control>
			<description>group element</description>
			<type>group</type>
			<visible>!Control.HasFocus(50)</visible>
			<control>
				<description>composite control consisting of a list control and a thumbnail panel</description>
				<type>facadeview</type>
				<id>50</id>
				<control>
					<description>listcontrol</description>
					<type>listcontrol</type>
					<id>50</id>
					<onleft>2</onleft>
					<onright>2</onright>
					<posX>402</posX>
					<posY>231</posY>
					<height>730</height>
					<textureFocus>list_wide_focus.png</textureFocus>
					<width>1008</width>
					<IconXOff>2000</IconXOff>
					<spinPosX>2000</spinPosX>
					<spinCanFocus>no</spinCanFocus>
				</control>
			</control>
		</control>

		<import>common.overlay.home.xml</import>

	</controls>
</window>
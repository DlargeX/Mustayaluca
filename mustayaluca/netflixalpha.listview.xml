	  <textcolor>ffffff</textcolor>
      <visible>facadeview.list+control.isvisible(50)+string.equals(#ShowSideInfo,true)</visible>
      <animation effect="fade" time="250" delay="0">WindowClose</animation>
    </control>
	
    <control>
      <description>Year</description>
      <id>1003</id>
      <type>label</type>

			<posY>0</posY>
			<width>1925</width>
			<height>1085</height>
			<texture>overlay_thumbs.png</texture>
			<visible>[facadeview.smallicons|facadeview.largeicons]</visible>
		</control>
		
		<control>
			<description>Backdrop Overlay Bar</description>
			<type>image</type>
			<id>0</id>
			<posX>0</posX>
			<posY>998</posY>
			<width>1920</width>
			<height>82</height>
			<texture>overlay_bar_bottom.png</texture>
		</control>
		
		<control Style="BigTitle">
			<description>Page Title</description>
			<type>label</type>
			<id>1</id>
			<posX>70</posX>
			<posY>45</posY>
			<width>1220</width>
			<label>#Trakt.Translation.SearchMovies.Label | #Trakt.Search.SearchTerm</label>
			<visible>facadeview.list+control.HasFocus(50)+!player.hasmedia</visible>
		</control>
		
		<control Style="BigTitle">
			<description>Selected Item</description>
			<type>label</type>
			<id>1</id>
			<posX>70</posX>
			<posY>45</posY>
			<width>1220</width>
			<label>#selecteditem</label>
			<visible>!facadeview.list+control.HasFocus(50)+!player.hasmedia+string.equals(#selecteditem)</visible>
		</control>
		
		<control Style="Time">
			<description>Date</description>
			<type>label</type>
			<id>1</id>
			<posX>70</posX>
			<posY>120</posY>
			<label>#date / #time</label>
			<visible>control.hasfocus(50)</visible>
		</control>
		
		<control Style="BigTitle">
			<type>label</type>
			<id>0</id>
			<posX>1850</posX>
			<posY>45</posY>
			<width>1220</width>
			<align>right</align>
			<label>#selectedindex/#itemcount</label>
			<visible>!player.hasmedia+string.equals(#selectedindex)</visible>
		</control>
		

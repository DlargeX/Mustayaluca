<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
	<controls>

		<control>
			<description>BG</description>
			<type>image</type>
			<id>1</id>
			<texture>backgrounds\settings\default.jpg</texture>
			<width>1920</width>
			<height>1080</height>
		</control>

		<control>
			<description>Backdrop Overlay</description>
			<type>image</type>
			<id>1</id>
			<posX>0</posX>
			<posY>0</posY>
			<width>1925</width>
			<height>1085</height>
			<texture>overlay_background.png</texture>
		</control>

		<control>
			<description>Backdrop Overlay</description>
			<type>image</type>
			<id>1</id>
			<posX>0</posX>
			<posY>0</posY>
			<width>1925</width>
			<height>1085</height>
			<texture>overlay_menu_widelist.png</texture>
		</control>
		
		<control>
			<description>Backdrop Overlay Bar</description>
			<type>image</type>
			<id>1</id>
			<posX>0</posX>
			<posY>998</posY>
			<width>1920</width>
			<height>82</height>
			<texture>overlay_bar_bottom.png</texture>
		</control>	

		<control Style="BigTitle">
			<description>Page Title</description>
			<type>label</type>
			<id>1</id>
			<posX>70</posX>
			<posY>45</posY>
			<width>1220</width>
			<label>#(iif(and(neq(L(102012), #currentmodule), neq(L(102002), #currentmodule), neq(L(100100), #currentmodule), neq(L(100101), #currentmodule), neq(L(102015), #currentmodule), neq(L(101002), #currentmodule)), #currentmodule, ' '))</label>
			<visible>!player.hasmedia</visible>
		</control>

		<control Style="Time">
			<description>Date</description>
			<type>label</type>
			<id>1</id>
			<posX>70</posX>
			<posY>120</posY>
			<label>#date / #time</label>
		</control>

	</controls>
</window>

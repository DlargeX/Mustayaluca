<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
	<id>87275</id>
	<defaultcontrol>50</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<controls>    
	
		<control>
			<description>Default Background</description>
			<type>image</type>
			<id>0</id>
			<posX>0</posX>
			<posY>0</posY>
			<width>1920</width>
			<height>1080</height>
			<texture>backgrounds\movies\default.jpg</texture>
		</control>
		
		<control>
			<description>Backdrop Overlay</description>
			<type>image</type>
			<id>0</id>
			<posX>0</posX>
			<posY>0</posY>
			<width>1925</width>
			<height>1085</height>
			<texture>overlay_background.png</texture>
		</control>
		
		<control>
			<description>Backdrop Overlay - List View</description>
			<type>image</type>
			<id>0</id>
			<posX>0</posX>
			<posY>0</posY>
			<width>1925</width>
			<height>1085</height>
			<texture>overlay_music_list.png</texture>
		</control>
		
		<control>
			<description>Backdrop Overlay Bar</description>
			<type>image</type>
			<id>0</id>
			<posX>0</posX>
			<posY>998</posY>
			<width>1920</width>
			<height>82</height>
			<texture>overlay_bar_bottom.png</texture>
		</control>
		
		<control Style="BigTitle">
			<description>Page Title</description>
			<type>label</type>
			<id>1</id>
			<posX>70</posX>
			<posY>45</posY>
			<width>1220</width>
			<label>#selecteditem</label>
			<visible>!player.hasmedia</visible>
		</control>
		
		<control Style="Time">
			<description>Date</description>
			<type>label</type>
			<id>1</id>
			<posX>70</posX>
			<posY>120</posY>
			<label>#date / #time</label>
		</control>
		
		<control Style="BigTitle">
			<type>label</type>
			<id>0</id>
			<posX>1850</posX>
			<posY>45</posY>
			<width>1220</width>
			<align>right</align>
			<label>#selectedindex/#itemcount</label>
			<visible>!player.hasmedia+string.equals(#selectedindex)</visible>
		</control>
		
		<control Style="DetailText">
			<description>Current View</description>
			<type>label</type>
			<id>0</id>
			<posX>70</posX>
			<posY>1030</posY>
			<width>1000</width>
			<label>#Trakt.Translation.Lists.Label / #Trakt.Lists.CurrentUser</label>
			<visible>!player.hasmedia</visible>
		</control>
		
		<!-- Facade Item Counts -->
		
		<control>
			<description>listscroller bg</description>
			<type>image</type>
			<id>1</id>
			<posX>0</posX>
			<posY>507</posY>
			<width>70</width>
			<height>67</height>
			<texture>listscroller_bg.png</texture>
			<colordiffuse>40ffffff</colordiffuse>
			<visible>facadeview.list+string.contains(#scrolling.up,yes)|string.contains(#scrolling.down,yes)</visible>
			<animation effect="slide" start="-70,0" end="0,0" tween="quadratic" easing="in" time="250">Visible</animation>
			<animation effect="slide" start="0,0" end="-70,0" tween="quadratic" easing="in" time="250">Hidden</animation>
		</control>
		
		<control>
			<type>label</type>
			<id>1</id>
			<posX>-3</posX>
			<posY>510</posY>
			<width>69</width>
			<height>69</height>
			<font>font7</font>
			<textcolor>ffffffff</textcolor>
			<label>#selecteditem.scrolllabel</label>
			<visible>facadeview.list+string.contains(#scrolling.up,yes)|string.contains(#scrolling.down,yes)</visible>
			<align>center</align>
			<valign>middle</valign>
			<animation effect="slide" start="-70,0" end="0,0" tween="quadratic" easing="in" time="250">Visible</animation>
			<animation effect="slide" start="0,0" end="-70,0" tween="quadratic" easing="in" time="250">Hidden</animation>
		</control>
		
		<control>
			<description>group element</description>
			<type>group</type>
			<control>
				<type>facadeview</type>
				<id>50</id>
				<control>
					<description>listcontrol</description>
					<type>listcontrol</type>
					<id>50</id>
					<posX>72</posX>
					<posY>231</posY>
					<height>730</height>
					<textureFocus>list_wide_focus.png</textureFocus>
					<width>1008</width>
					<IconXOff>2000</IconXOff>
					<spinPosX>2000</spinPosX>
					<spinCanFocus>no</spinCanFocus>
				</control>
				
			</control>
		</control>

		<control Style="DetailTextDroid">
			<description>List Description</description>
			<type>textboxscrollup</type>
			<id>0</id>
			<posX>1105</posX>
			<posY>249</posY>
			<width>800</width>
			<height>660</height>
			<label>#Trakt.List.Description</label>
			<visible>!string.equals(#Trakt.List.Description,N/A)</visible>
		</control>

		<import>common.overlay.xml</import>

	</controls>
</window>

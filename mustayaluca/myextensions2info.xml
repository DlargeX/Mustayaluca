<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
	<id>804</id>
	<defaultcontrol>2</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<define>#header.hover:hover_extensions.png</define>		
  <controls>
  
  <!--            :: BACKGROUND ::           	 -->
	
    <control>
      <description>Default Background</description>
      <type>image</type>
      <id>1</id>
      <texture>#header.hover</texture>
      <width>1920</width>
      <height>1080</height>
			<shouldCache>true</shouldCache>					
    </control>

		<control>
			<description>Backdrop Overlay</description>
			<type>image</type>
			<id>1</id>
			<posX>0</posX>
			<posY>0</posY>
			<width>1925</width>
			<height>1085</height>
			<texture>overlay_background.png</texture>
		</control>

		<control>
			<description>Backdrop Overlay - Wide List View</description>
			<type>image</type>
			<id>1</id>
			<posX>0</posX>
			<posY>0</posY>
			<width>1925</width>
			<height>1085</height>
			<texture>overlay_menu_full.png</texture>
		</control>

		<control>
			<description>Backdrop Overlay Bar</description>
			<type>image</type>
			<id>1</id>
			<posX>0</posX>
			<posY>998</posY>
			<width>1920</width>
			<height>82</height>
			<texture>overlay_bar_bottom.png</texture>
		</control>

		<control Style="BigTitle">
			<description>Page Title</description>
			<type>label</type>
			<id>1</id>
			<posX>70</posX>
			<posY>45</posY>
			<width>1220</width>
			<label>#(L(14001)) / #MPE.Selected.Name</label>
			<visible>!player.hasmedia</visible>
		</control>

		<control Style="Time">
			<description>Date</description>
			<type>label</type>
			<id>1</id>
			<posX>70</posX>
			<posY>120</posY>
			<label>#date / #time</label>
		</control>

		<control>
			<description>group element</description>
			<type>group</type>
			<animation effect="slide" time="250" start="-300,0" reversible="false">visible</animation>
			<animation effect="slide" time="250" end="-300,0" reversible="false">hidden</animation>
			<control>
				<description>button group</description>
				<type>group</type>
				<posX>0</posX>
				<posY>230</posY>
				<layout>StackLayout(0, Vertical, true)</layout>
				
				<control>
					<id>2</id>
					<description>Install</description>
					<type>button</type>
					<visible>!string.equals(#MPE.Selected.isinstalled,true)</visible>
					<label>#MPEI.Translation.Install.Label</label>
					<onright>2</onright>
					<ondown>3</ondown>
					<onup>9</onup>
				</control>
				
				<control>
					<id>3</id>
					<description>UnInstall</description>
					<type>button</type>
					<visible>string.equals(#MPE.Selected.isinstalled,true)</visible>
					<label>#MPEI.Translation.Uninstall.Label</label>
					<onright>3</onright>
					<ondown>4</ondown>
					<onup>2</onup>
				</control>
				
				<control>
					<id>4</id>
					<description>Update</description>
					<type>button</type>
					<visible>string.equals(#MPE.Selected.haveupdate,true)</visible>
					<label>#MPEI.Translation.Update.Label</label>
					<onright>4</onright>
					<ondown>5</ondown>
					<onup>3</onup>
				</control>
				
				<control>
					<id>5</id>
					<description>Disable</description>
					<type>button</type>
					<visible>string.equals(#MPE.Selected.IsEnabled,true)</visible>
					<label>#MPEI.Translation.Disable.Label</label>
					<onright>5</onright>
					<ondown>6</ondown>
					<onup>4</onup>
				</control>
				
				<control>
					<id>6</id>
					<description>Enable</description>
					<type>button</type>
					<visible>string.equals(#MPE.Selected.IsDisabled,true)</visible>
					<label>#MPEI.Translation.Enable.Label</label>
					<onright>6</onright>
					<ondown>7</ondown>
					<onup>5</onup>
				</control>
				
				<control>
					<id>7</id>
					<description>Settings</description>
					<type>button</type>
					<visible>string.equals(#MPE.Selected.HaveSettings,true)</visible>
					<label>#MPEI.Translation.Settings.Label</label>
					<onright>7</onright>
					<ondown>8</ondown>
					<onup>6</onup>
				</control>
				
				<control>
					<id>8</id>
					<description>Change Log</description>
					<type>button</type>
					<label>#MPEI.Translation.ChangeLog.Label</label>
					<onright>8</onright>
					<ondown>9</ondown>
					<onup>7</onup>
					<visible>!string.equals(#MPE.View.Name,#MPEI.Translation.MPOnlineExtensions.Label)</visible>
				</control>
				
				<control>
					<id>9</id>
					<description>Screenshots</description>
					<type>button</type>
					<label>#MPEI.Translation.Screenshots.Label</label>
					<onright>9</onright>
					<ondown>2</ondown>
					<onup>8</onup>
					<visible>string.equals(#MPE.Selected.HaveScreenShots,true)</visible>
				</control>
				
			</control>
		</control>

		<control Style="DetailTitle">
			<type>fadelabel</type>

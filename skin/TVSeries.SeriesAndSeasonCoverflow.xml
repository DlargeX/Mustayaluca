<?xml version="1.0" encoding="utf-8"?>
<window> 
	<controls>	

		<control>
			<description>Backdrop Overlay</description>
			<type>image</type>
			<id>0</id>
			<posX>0</posX>
			<posY>0</posY>
			<width>1925</width>
			<height>1085</height>
			<texture>overlay_coverflow_top.png</texture>
			<visible>facadeview.coverflow</visible>
		</control>

		<control Style="BigTitle">
			<description>Movie Title</description>
			<type>label</type>
			<id>0</id>
			<posX>70</posX>
			<posY>45</posY>
			<width>1220</width>
			<label>#TVSeries.Series.Pretty_Name</label>
			<visible>facadeview.coverflow+control.isvisible(50)+Control.HasFocus(50)+!player.hasmedia</visible>
			<animation effect="fade" time="250">visiblechange</animation>
			<animation effect="fade" time="250">WindowClose</animation>
		</control>

		<control Style="BigTitle">
			<type>label</type>
			<id>0</id>
			<posX>1850</posX>
			<posY>45</posY>
			<width>1220</width>
			<align>right</align>
			<label>#selectedindex/#itemcount</label>
			<visible>facadeview.coverflow+control.isvisible(50)+control.isvisible(1238)+!player.hasmedia</visible>
			<animation effect="fade" time="250">visiblechange</animation>
			<animation effect="fade" time="250">WindowClose</animation>
		</control>

		<control Style="DetailText">
			<description>TVDB Label</description>
			<type>label</type>
			<label>TVDB:</label>
			<posX>70</posX>
			<posY>1030</posY>
			<width>800</width>
			<align>left</align>
			<visible>[[control.isvisible(1237)+control.isvisible(1242)]|control.isvisible(1238)]+facadeview.coverflow+control.isvisible(50)</visible>
			<animation effect="fade" time="250">visiblechange</animation>
			<animation effect="fade" time="250">WindowClose</animation>
		</control>

		<control>
			<description>TVDB Stars</description>
			<type>image</type>
			<posX>150</posX>
			<posY>1030</posY>
			<width>151</width>
			<height>32</height>
			<align>left</align>
			<texture>#TVSeries.Series.FiveStarRatingPath</texture>
			<visible>[[control.isvisible(1237)+control.isvisible(1242)]|control.isvisible(1238)]+facadeview.coverflow+!string.equals(#TVSeries.Series.InfoPanelLine4Value,/10)</visible>
			<animation effect="fade" time="250">visiblechange</animation>
			<animation effect="fade" time="250">WindowClose</animation>
		</control>

		<control>
			<description>TVDB Stars</description>
			<type>image</type>
			<posX>150</posX>
			<posY>1030</posY>
			<width>151</width>
			<height>32</height>
			<align>left</align>
			<texture><texture>logos/rating/0.png</texture></texture>
			<visible>[[control.isvisible(1237)+control.isvisible(1242)]|control.isvisible(1238)]+facadeview.coverflow+string.equals(#TVSeries.Series.InfoPanelLine4Value,/10)</visible>
			<animation effect="fade" time="250">visiblechange</animation>
			<animation effect="fade" time="250">WindowClose</animation>
		</control>

		<control Style="DetailText">
			<description>Series Details Label</description>
			<type>label</type>
			<label>| #TVSeries.Series.InfoPanelLine5Value | #TVSeries.Series.InfoPanelLine6Key: #TVSeries.Series.InfoPanelLine6Value | #TVSeries.Series.InfoPanelLine3Value</label>
			<posX>315</posX>
			<posY>1030</posY>
			<width>1100</width>
			<align>left</align>
			<visible>[[control.isvisible(1237)+control.isvisible(1242)]|control.isvisible(1238)]+facadeview.coverflow</visible>
			<animation effect="fade" time="250">visiblechange</animation>
			<animation effect="fade" time="250">WindowClose</animation>
		</control>

	</controls>
</window>

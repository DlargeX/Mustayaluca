<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
	<id>2000</id>
	<defaultcontrol>3</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<controls>

		<control>
			<description>Default Background</description>
			<type>image</type>
			<id>1</id>
			<texture>#selectedthumb</texture>
			<width>1920</width>
			<height>1080</height>
			<keepaspectratio>yes</keepaspectratio>
			<centered>yes</centered>
			<zoom>yes</zoom>
		</control>

		<control>
			<description>Backdrop Overlay</description>
			<type>image</type>
			<id>1</id>
			<posX>0</posX>
			<posY>0</posY>
			<width>1925</width>
			<height>1085</height>
			<texture>overlay_background.png</texture>
		</control>

		<control>
			<description>Backdrop Overlay</description>
			<type>image</type>
			<id>1</id>
			<posX>0</posX>
			<posY>0</posY>
			<width>1925</width>
			<height>1085</height>
			<texture>overlay_menu_full.png</texture>
		</control>

		<control Style="BigTitle">
			<description>Select text label</description>
			<type>label</type>
			<id>4</id>
			<posX>70</posX>
			<posY>45</posY>
			<width>1220</width>
			<label>181</label>
			<visible>!player.hasmedia</visible>
			<animation effect="fade" time="150">WindowOpen</animation>
			<animation effect="fade" time="150">WindowClose</animation>
		</control>

		<control Style="Time">
			<description>Date</description>
			<type>label</type>
			<id>1</id>
			<posX>70</posX>
			<posY>120</posY>
			<label>#date / #time</label>
		</control>

		<control>
			<description>albums listcontrol</description>
			<type>listcontrol</type>
			<id>3</id>
			<posX>402</posX>
			<posY>231</posY>       
			<height>730</height>
			<textureFocus>list_wide_focus.png</textureFocus>
			<width>1008</width>
			<IconXOff>2000</IconXOff>  
			<spinPosX>2000</spinPosX>
			<spinCanFocus>no</spinCanFocus>
			<onleft>5</onleft>
			<onright>5</onright>
			<onup>5</onup>
			<ondown>5</ondown>
			<animation effect="fade" time="150">WindowOpen</animation>
			<animation effect="fade" time="150">WindowClose</animation>
		</control>

		<control>
			<description>IMDB</description>
			<type>button</type>
			<id>5</id>
			<label>368</label>
			<onleft>3</onleft>
			<onright>3</onright>
			<onup>21</onup>
			<ondown>3</ondown>
			<animation effect="fade" time="150">WindowOpen</animation>
			<animation effect="fade" time="150">WindowClose</animation>
		</control>

		<import>common.overlay.xml</import>

	</controls>
